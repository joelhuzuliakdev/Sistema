---
const { title = "Panel Admin" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
    </head>

    <body class="flex bg-gray-100 min-h-screen">
        <!-- Sidebar -->
        <aside class="w-64 bg-blue-700 text-white p-4">
        <h2 class="text-xl font-bold mb-4">
            Admin
        </h2>

        <nav class="flex flex-col space-y-2">
            <a href="/admin/dashboard" class="hover:bg-blue-600 p-2 rounded">
            Dashboard
            </a>
            <a href="/admin/productos" class="hover:bg-blue-600 p-2 rounded">
            Productos
            </a>
            <a href="/admin/ventas" class="hover:bg-blue-600 p-2 rounded">
            Ventas
            </a>
            <a href="/admin/cierres" class="hover:bg-blue-600 p-2 rounded">
            Cierres
            </a>
            <a href="/admin/clientes" class="hover:bg-blue-600 p-2 rounded">
            Clientes
            </a>
        </nav>
        </aside>

        <!-- Contenido -->
        <main class="flex-1 p-6">
        <slot />
        </main>
    </body>
</html>