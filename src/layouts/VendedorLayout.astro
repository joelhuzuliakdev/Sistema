---
const { title = "Panel Vendedor" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
    </head>

    <body class="flex bg-gray-100 min-h-screen">
        <!-- Sidebar -->
        <aside class="w-64 bg-green-700 text-white p-4">
        <h2 class="text-xl font-bold mb-4">
            Vendedor
        </h2>

        <nav class="flex flex-col space-y-2">
            <a href="/vendedor/dashboard" class="hover:bg-green-600 p-2 rounded">
            Dashboard
            </a>
            <a href="/vendedor/precios" class="hover:bg-green-600 p-2 rounded">
            Lista de Precios
            </a>
        </nav>
        </aside>

        <!-- Contenido -->
        <main class="flex-1 p-6">
        <slot />
        </main>
    </body>
</html>